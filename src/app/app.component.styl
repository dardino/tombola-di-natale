.menu 
    position fixed
    top 0
    display flex 
    margin 0
    padding 0 1rem
    left 0
    right 0
    border-bottom: solid 1px #c1c1c1
    background-color: rgba(0,0,0,.5)
    box-shadow: 0 0 5px 2px #6f6f6f
    list-style: none

    li
        display: block
        padding: 0 1rem

    a 
        text-decoration none 
        color #c1c1c1

        &:hover
            color: #fff