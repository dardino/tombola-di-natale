.cartella
  color: #000000;
  display grid
  border solid .2mm #c1c1c1
  background-color: #fff
  width 14cm
  height 9cm
  grid-template-rows 1fr repeat(3, auto)
  grid-template-columns repeat(9, 1fr)
  padding: 1em
  page-break-inside: avoid

  > header
    background: white
    grid-column-start: 1;
    grid-column-end: 10;

    > h2
      padding: 0
      margin: 0

.num
  border solid .1mm #c1c1c1
  display flex
  font-size 2em
  align-items center
  justify-content center
  height: 2.4em;
